<Window x:Class="StonksPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StonksPizza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="lijst"
                ItemsSource="{Binding Pizza}" FontSize="18" Margin="10,10,515.6,260" >

            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel Width="200">
                        <TextBlock Text="{Binding naam}" HorizontalAlignment="Left"/>
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:Name="lijstIngr"
                ItemsSource="{Binding Ingredienten}" FontSize="18" Margin="10,165,515.6,105">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel Width="200">
                        <TextBlock Text="{Binding naam}" HorizontalAlignment="Left"/>
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
